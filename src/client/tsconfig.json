{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "../../public/js",
    "composite": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "module": "es2020",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "lib": ["es2015", "dom", "es2019"]
  }
}
